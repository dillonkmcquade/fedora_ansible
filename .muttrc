source ~/.mutt/hotmail
folder-hook $folder 'source ~/.mutt/hotmail'
source ~/.mutt/gmail
folder-hook $folder 'source ~/.mutt/gmail'
# # Change the following line to a different editor you prefer.
set editor = 'vim + -c "set textwidth=72" -c "set wrap"'
# Basic config
unset imap_passive
set mbox_type=Maildir
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set pager_index_lines = 10
set sidebar_visible
set mail_check_stats
set sidebar_format = "%B%?F? [%f]?%* %?N?%N/?%s"
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop


color indicator brightyellow default
color index_subject color43 default '.*'
color index_author color134 default '.*'
color index_number color99 default
color index_subject color44 default "~N"
color index_author color147 default "~N"
color signature brightgreen default
color body brightblue default "(https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+" # URL
color message cyan default
color header brightcyan default ".*"
color header brightwhite default "^(CC|BCC)"
mono bold bold
mono underline underline
mono indicator reverse
mono error bold
set markers=no




macro index 'f' '<sync-mailbox><enter-command>source ~/.mutt/hotmail<enter><change-folder>!<enter>'
macro index 'g' '<sync-mailbox><enter-command>source ~/.mutt/gmail<enter><change-folder>!<enter>'
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'
